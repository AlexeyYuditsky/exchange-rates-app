<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/currencyImageView"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/aud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/currencyShortNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/currencyFullNameTextView"
        app:layout_constraintEnd_toStartOf="@+id/currencyValueTextView"
        app:layout_constraintStart_toEndOf="@+id/currencyImageView"
        app:layout_constraintTop_toTopOf="@+id/currencyImageView"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="USD" />

    <TextView
        android:id="@+id/currencyFullNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:lines="1"
        android:textSize="16sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="0.1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/currencyImageView"
        app:layout_constraintEnd_toStartOf="@+id/currencyValueTodayMinusYesterdayTextView"
        app:layout_constraintStart_toStartOf="@+id/currencyShortNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/currencyShortNameTextView"
        tools:text="US Dollar" />

    <TextView
        android:id="@+id/currencyValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/currencyShortNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/currencyShortNameTextView"
        tools:text="59.3749" />

    <TextView
        android:id="@+id/currencyValueTodayMinusYesterdayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/currencyFullNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/currencyValueTextView"
        app:layout_constraintTop_toTopOf="@+id/currencyFullNameTextView"
        tools:text="-0.0315" />

</androidx.constraintlayout.widget.ConstraintLayout>